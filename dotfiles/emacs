(defun insert-real-tab ()
	(interactive)
	(insert "\t")
)

(require 'package)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/"))
(package-initialize)
(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(package-selected-packages
   '(editorconfig undo-tree gruvbox-theme evil-collection evil)))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )

;; VISUALS
(load-theme 'gruvbox-dark-hard t)
(menu-bar-mode -1)
(tool-bar-mode -1)
(toggle-scroll-bar -1)
(setq-default inhibit-startup-screen t)
(setq-default initial-scratch-message nil)

(setq-default electric-indent-mode 0)
;; INDENTATION
(setq-default backward-delete-char-untabify-method 'hungry)
(setq-default custom-tab-width 4)
(setq-default indent-tabs-mode t)
(setq-default tab-width custom-tab-width)
(setq-default tab-always-indent t)
(setq-default whitespace-style '(face tabs tab-mark))
(global-whitespace-mode)
(global-set-key (kbd "TAB") 'insert-real-tab)

(setq-default backup-directory-alist `(("." . "~/.saves")))
(setq-default auto-save-default nil)

;; PLUGINS

;; EDITORCONFIG
(editorconfig-mode t)

;; UNDO
(require 'undo-tree)
(global-undo-tree-mode)

;; EVIL
(setq-default evil-want-C-u-scroll t)
(setq-default evil-undo-system 'undo-tree)
(setq-default evil-want-Y-yank-to-eol t)
(setq-default evil-shift-width custom-tab-width)

(require 'evil)
(evil-mode 1)

;; VI KEYBINDS
(evil-set-leader 'normal (kbd ","))
(evil-define-key '(normal insert visual replace operator motion) 'global (kbd "C-c") 'evil-normal-state)
(evil-define-key 'visual 'global (kbd "Q") 'comment-region)
(evil-define-key 'normal 'global (kbd "Q") 'comment-line)
(evil-define-key 'visual 'global (kbd "gQ") 'uncomment-region)
(evil-define-key 'normal 'global (kbd "=") 'whitespace-cleanup)
(evil-define-key 'normal 'global (kbd "<leader>x") 'kill-buffer)

